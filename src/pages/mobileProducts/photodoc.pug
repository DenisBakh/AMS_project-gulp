include ../../components/blocks/buttons/button.pug




doctype html
html(lang='ru')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0')
		meta(name='description' content='Создавайте любые фото на документы всего за несколько минут в мобильном приложении Фото на Документы Профи!')
		link(rel='canonical' href='')
		link(rel='icon' href='../assets/img/favicon.ico')
		link(rel="stylesheet", href="../assets/css/common.css")
		link(rel="stylesheet", href="../assets/css/mobileProducts.css")
		title='Скачать Фото на Документы Профи'
	body

		.wrapper-apple
			main.main-apple.ibgChange
				.ibgChange__item(data-bg='450')
					img(src='../assets/img/photodoc-bg320.png', alt='')
				.ibgChange__item(data-bg='30000')
					img(src='../assets/img/photodoc-bg.png', alt='')
				.container
					.main-apple__logo
						img(src='../assets/img/photodoc-icon.png', alt='logo')
					h1.main-apple__title Скачать программу
						span.main-apple__title-product «Фото на Документы Профи»
