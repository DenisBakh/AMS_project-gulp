					.main-apple__link
						+button('mobile','https://apps.apple.com/ru/app/%D1%84%D0%BE%D1%82%D0%BE-%D0%BD%D0%B0-%D0%B4%D0%BE%D0%BA%D1%83%D0%BC%D0%B5%D0%BD%D1%82%D1%8B-%D0%BF%D1%80%D0%BE%D1%84%D0%B8/id1483750251', 'Загрузите в', true)

		script(src='../assets/js/jquery.min.js')
		script(src='../assets/js/common.js')






